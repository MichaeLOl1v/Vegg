<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C8D9CA"
    tools:context=".Login_Layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <ImageView
            android:layout_marginTop="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/vegan"
            android:layout_gravity="center_horizontal"/>


            <EditText
                android:id="@+id/Email"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableStart="@drawable/baseline_person"
                android:hint="UsuÃ¡rio"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                android:padding="10sp"
                android:textColorHint="#FF595858"/>

            <EditText
                android:id="@+id/Senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableStart="@drawable/baseline_lock"
                android:hint=" Senha"
                android:inputType="textPassword"
                android:maxLength="100"
                android:padding="10sp"
                android:textColorHint="#595858"/>


        </LinearLayout>











</LinearLayout>