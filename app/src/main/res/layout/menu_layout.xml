<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#C8D9CA"
    tools:context=".Splash_Layout">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/idMenuPets"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:clickable="true"
            app:cardBackgroundColor="#C1F0AD"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType=""
                    android:src="@drawable/cafemanha"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/borel"
                    android:shadowColor="#9C8585"
                    android:shadowRadius="5"
                    android:text="Café da manhã"
                    android:textColor="#886D5F"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/idMenuAlimentos"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:clickable="true"
            app:cardBackgroundColor="#C5EFC6"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/almocojanta"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/borel"
                    android:shadowColor="#9C8585"
                    android:shadowRadius="5"
                    android:text="Almoço / Janta"
                    android:textColor="#886D5F"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/idMenuDoacoes"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:clickable="true"
            app:cardBackgroundColor="#83DE9D"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/sobremesa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/borel"
                    android:shadowColor="#9C8585"
                    android:shadowRadius="5"
                    android:text="Sobremesas"
                    android:textColor="#886D5F"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/idMenuServicos"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:clickable="true"
            app:cardBackgroundColor="#ADE4CF"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/borel"
                    android:shadowColor="#9C8585"
                    android:shadowRadius="5"
                    android:text="Serviços"
                    android:textAllCaps="true"
                    android:textColor="#886D5F"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/idMenuLocalizar"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:clickable="true"
            app:cardBackgroundColor="#ADE4D8"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/borel"
                    android:shadowColor="#9C8585"
                    android:shadowRadius="5"
                    android:text="Localizar"
                    android:textAllCaps="true"
                    android:textColor="#886D5F"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/idMenuParceiros"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:clickable="true"
            app:cardBackgroundColor="#94C74D"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/borel"
                    android:shadowColor="#9C8585"
                    android:shadowRadius="5"
                    android:text="Parceiros"
                    android:textAllCaps="true"
                    android:textColor="#886D5F"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>




</LinearLayout>